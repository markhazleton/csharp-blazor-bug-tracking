@page "/new-bug"
<h3>Add New Bug</h3>

<EditForm Model="AddBug" >
    <InputText @bind-Value="@AddBug.Title" placeholder="Add Title"></InputText>
    <InputText @bind-Value="@AddBug.Description" placeholder="Add Description" ></InputText>
    <InputNumber @bind-Value="@AddBug.Priority" placeholder="Enter Priroity" ></InputNumber>
    <button type="submit">Add Bug</button>
</EditForm>

